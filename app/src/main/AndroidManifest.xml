<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aman.ache">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />




    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_beer_bg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_beer_bg_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ache.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".mainActivity.RecoveryActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".dashBoardActivity.search.SearchExec"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".dashBoardActivity.search.SearchActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".dashBoardActivity.main.profile.SideActivities.Report"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".dashBoardActivity.main.profile.SideActivities.Feedback"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".dashBoardActivity.category.CategoryActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".dashBoardActivity.secondary.SecondaryActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".dashBoardActivity.DashBoardActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".onBoarding.OnBoardingActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainActivity.MainActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>