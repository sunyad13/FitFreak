<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:id="@+id/bottom_sheet">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_gravity="center"
        android:layout_height="10dp"
        android:src="@drawable/bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let us Know you more"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/test1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/know"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_gravity="center"
        />


    <View
        android:id="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/linear_layout"
        android:background="#F4F5F7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_gravity="center"
            android:layout_height="24dp"
            android:src="@drawable/ic_age"/>

        <EditText
            android:id="@+id/ageET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_input"
            android:gravity="center"
            android:hint="How old are you"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:maxLines="1"
            android:minHeight="50dp"
            android:padding="15dp"
            android:textColor="@color/textColor"
            android:textColorHint="#9FA5C0"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="15sp" />
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_gravity="center"
            android:layout_height="24dp"
            android:src="@drawable/ic_weight"/>

        <EditText
            android:id="@+id/weightEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_input"
            android:gravity="center"
            android:hint="How much you weigh in kg"
            android:layout_marginStart="10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:minHeight="50dp"
            android:padding="15dp"
            android:textColor="@color/textColor"
            android:textColorHint="#9FA5C0"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_gravity="center"
            android:layout_height="24dp"
            android:src="@drawable/ic_height"/>

        <EditText
            android:id="@+id/heightEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_input"
            android:gravity="center"
            android:hint="Height in foot  (1 ft = 12 inch)"
            android:layout_marginStart="10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:minHeight="50dp"
            android:padding="15dp"
            android:textColor="@color/textColor"
            android:textColorHint="#9FA5C0"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/Continue"
            android:backgroundTint="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/test1"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Continue"
            android:textColor="@color/textColor"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:textSize="17sp"
            />


    </LinearLayout>



    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please, provide all the detail"
        android:textColor="@color/red"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>