<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashBoardActivity.secondary.fragment.ExerciseFragment"
    android:background="@color/app_bg"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="39dp"
            android:background="@color/black">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtubeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                app:showFullScreenButton="false"
                android:soundEffectsEnabled="true"
                />


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/grey"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/grey"
            android:layout_marginStart="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/grey"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_marginTop="3dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#EAEBF5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/const_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/border_input">


                    <TextView
                        android:id="@+id/step_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Step 1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/s1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/step_1"
                        app:layout_constraintBottom_toTopOf="@id/view"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_view_1"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/step_2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Step 2"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/s2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/step_2"
                        app:layout_constraintBottom_toTopOf="@id/view2"/>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_view_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/border_input"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_view_2"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/step_3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Step 3"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/s3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/step_3"
                        app:layout_constraintBottom_toTopOf="@id/view3"/>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_view_4"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_view_3">

                    <TextView
                        android:id="@+id/step_4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Step 4"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/s4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/step_4"
                        app:layout_constraintBottom_toTopOf="@id/view4"/>

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/const_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/const_view"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_sheet_bg"
                >

                <ImageView
                    android:id="@+id/bar"
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_height="10dp"
                    android:src="@drawable/bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABOUT VIDEO PLAYER"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/c1"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tips"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/tt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/c1"
                    app:layout_constraintTop_toTopOf="@id/c1"
                    app:layout_constraintBottom_toBottomOf="@id/c1"
                    android:text="Video quality adjusts automatically if weak network."
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:layout_marginStart="5dp"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/c2"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/c1"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/tt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/c2"
                    app:layout_constraintTop_toTopOf="@id/c2"
                    app:layout_constraintBottom_toBottomOf="@id/c2"
                    android:text="Tap on the youtube icon to reach our youtube channel."
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:layout_marginStart="5dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/c3"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/c2"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/tt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/c3"
                    app:layout_constraintTop_toTopOf="@id/c3"
                    app:layout_constraintBottom_toBottomOf="@id/c3"
                    android:text="On low visibility increase the brightness level."
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:layout_marginStart="10dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/c4"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/c3"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/tt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/c4"
                    app:layout_constraintTop_toTopOf="@id/c4"
                    app:layout_constraintBottom_toBottomOf="@id/c4"
                    android:text="Please report if any video fails to load."
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:layout_marginStart="10dp"/>



                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/pullups"

                    app:layout_constraintTop_toBottomOf="@id/tt4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingTop="30dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    app:layout_constraintStart_toStartOf="@id/image"
                    app:layout_constraintEnd_toEndOf="@id/image"
                    android:text="We believe you can ♥️"
                    android:textColor="@color/black"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/const_view2"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
